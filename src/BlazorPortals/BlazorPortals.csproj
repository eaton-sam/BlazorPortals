<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>

	<PackageId>BlazorPortals</PackageId>
	<Version>0.1.0</Version>
	<Authors>Sam Eaton</Authors>
	<PackageDescription>Portals for Blazor. Render components outside of their hierarchy.</PackageDescription>
	<PackageProjectUrl>https://github.com/eaton-sam/BlazorPortals</PackageProjectUrl>
	<PackageLicenseExpression>MIT</PackageLicenseExpression>
	<PackageTags>blazor</PackageTags>
  <PackageReadmeFile>README.md</PackageReadmeFile>
	<RepositoryUrl>https://github.com/eaton-sam/BlazorPortals</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <None Include="../../README.md" Pack="true" PackagePath="\"/>
  </ItemGroup>

  <ItemGroup>
    <SupportedPlatform Include="browser" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="7.0.0" />
  </ItemGroup>

</Project>
